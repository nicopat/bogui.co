ul#nav li.dropdown ul.submenu {
  display: none;
  // background: {{ settings.dropdown_background_color }}! important;
  float: left;
  position: absolute;
  top: 40px;
  left: 0;
  z-index: 1;
  margin: 0;
  padding: 0;
  line-height: 30px! important;
}
ul#nav li.dropdown ul.submenu li a:hover {
  border: none;
}

ul#nav li.dropdown > a:after {
  font-family: 'FontAwesome';
  content: "\f107";
  margin-left: 10px;
}
ul#nav li.dropdown.hover {
  border-bottom: 1px solid #ffffff !important;
  z-index: 21;
}

ul#nav li:hover ul.submenu {
  display: block;
  background: #fff !important;
  border: 1px solid #ececec;
}

ul#nav li.dropdown.hover ul.submenu:hover,
ul#nav li.dropdown.hover ul.submenu li a:hover {
  display: block;
  background: #fff !important;
  // z-index: 20;
}



ul#nav li ul.submenu li{
  background: #fff;
  color: {{ settings.nav_dropdown_color }};
  width: 180px;
  text-align: left;
}

ul#nav li ul.submenu li a:hover {
  color: {{ settings.dropdown_hover_link_color }};
  // background: {{ settings.dropdown_hover_background_color }};
}

ul#nav li ul.submenu li a{
  text-align: left;
  font-size: {{ settings.dropdown-font-size }};
  padding-left: 10px;
  color: {{ settings.nav_dropdown_color }};
  text-transform {{ settings.dropdown-transform }}! important;
}

ul#nav li:hover ul.submenu li:hover a,
ul#nav li:hover ul.submenu li a:hover {
  border: 1px solid transparent !important;
}


.submenu li:hover > ul.nested {
  display: block;
  position: absolute;
  left: 100%;
  top: 0;
  background: {{ settings.dropdown_background_color }};
  border: 1px solid {{ settings.dotted_color }};
  border-left: 0;
}

.nested {
  display: none;
}

ul.nested:before {
  position: absolute;
  top: 0;
  left: -28px;
  font-family: 'FontAwesome';
  content: "\f105";
  margin-left: 10px;
}


.rightarrow {
  position: absolute;
  right: 10px;
  top: 10px;
  font-size: 11px;
  color: {{ settings.dropdown-link-color }};
}




