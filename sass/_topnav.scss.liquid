header {
  -webkit-transition: all 0s ease-out;
  -moz-transition: all 0s ease-out;
  -o-transition: all 0s ease-out;
  transition: all 0s ease-out;
  background: transparent;
  position: relative;
}

#top-bar {
  text-align: center;
  line-height: 30px;
  background: {{ settings.top_bar_background }};
  /*padding: 5px;*/
  height: 57px;
  color: {{ settings.top_bar_color }};
  font-size: {{ settings.top_bar_size }};
}
.row.top-bar-links {
  padding: 10px;
}
#top-bar:after {
  content: '';
  position: absolute;
  background: url(top-bar_zigzag.png) 0 0px;
  display: block;
  height: 6px;
  top: 51px;
  width: 100%;
  left: 0px;
  background-size: 14px 6px;
}
#top-bar.stuckMenu.isStuck {
  z-index: 100;
  width: 100%;
  margin: 0px auto;
}
#nav.stuckMenu.isStuck {
  top: 36px !important;
}

#top-bar a {
  color: {{ settings.top_bar_color }};
  font-size: {{ settings.top_bar_size }};
}
#top-bar a:hover,
#cart.desktop-third a:hover {
  color: #E2A0BD;
}

#logo-topnav a {
  overflow: hidden;
  display: block;
  margin: 0;
  padding: 0;
  height: 32px;
}
#logo-topnav a img {
    opacity: 0;
    // width: 80px;
}
#top-bar #logo-topnav {
  display: none;
}
#top-bar.isStuck #logo-topnav {
  display: block;
  border: 0;
  height: 32px;
  margin-left: auto;
  margin-right: auto;
}

#top-bar.isStuck #logo-topnav img  {
  opacity: 1;
}



#top-bar #q, #navigation #q {
  line-height: 30px;
  padding: 0 10px;
  text-indent: 0;
  margin-bottom: 0;
  /*border: 1px solid #eee;*/
}

#top-bar #q, #navigation #q {
  width: 50%;
  -webkit-transition: width 1s ease-in-out;
  -moz-transition: width 1s ease-in-out;
  -o-transition: width 1s ease-in-out;
  transition: width 1s ease-in-out;
  min-height: 32px;
    color: {{ settings.top_bar_color }};

}

#navigation .nav-search {
  margin-right: 0;
  position: relative;
  &:hover {
    background: none;
  }
}
#navigation form {
  float: right;
  width: 90%;
}

#navigation #q {
  width: 100%;
  border-top: none;
  border-left: none;
  border-right: none;
  border-bottom: 2px solid #ccc;
  border-radius: 0;
}

#navigation .fa-search {
  position: absolute;
  top: 7px;
  right: 15px;
  font-size: 15px;
  color: #ccc;
}

#top-bar ul li {
  list-style-type: none;
}

#top-bar #q:focus, #navigation #q:focus {
  width: 100%;
}


#top-bar #q::-webkit-input-placeholder {
   color: {{ settings.top_bar_color }};
}

#top-bar #q:-moz-placeholder { /* Firefox 18- */
   color: {{ settings.top_bar_color }};
}

#top-bar #q::-moz-placeholder {  /* Firefox 19+ */
   color: {{ settings.top_bar_color }};
}

#top-bar #q:-ms-input-placeholder {
   color: {{ settings.top_bar_color }};
}


#identity {
  margin-top: 10px;
  margin-bottom: 35px;
}

#content { margin-bottom: 50px; margin-top: 10px; position: relative; }

ul#cart {
  text-align: right;
}

ul#cart li {
  display: inline-block;
}

.cart-overview:hover #crt {
  border: none;
}

ul#cart li i {
  margin-left: 8px;
}

ul#cart li a {
  display: block;
  padding: 0 0 0 20px;
  font-size: {{ settings.top_bar_size }};
  color: {{ settings.top_bar_color }};
}

ul#cart li a:hover {
  text-decoration: none;
  color: {{ settings.top_bar_color }};
}

#currencies {
  width: inherit;
  background: transparent;
  border: 0;
  margin: 0;
  color: {{ settings.top_bar_color }};
  font-size: {{ settings.top_bar_size }};
  padding: 0 0 0 20px;

}

ul#social-links {
  list-style: none;
  float: right;
  text-align: right;
}
ul#social-links li {
  display: inline-block;
  margin: 0 0 0 10px;
  font-size: 17px;
}
ul#social-links li a {
  text-align: center;
  display: block;
  padding: 0;
  color: {{ settings.social-links }}! important;
  line-height: 35px;
  min-width: 37px;
  border-radius: 18px;
  border: 1px solid {{ settings.social-links }};
}

ul#social-links li a:hover {
  color: {{ settings.social-links-hover }}! important;
  border: 1px solid {{ settings.social-links-hover }};
}


.smallcash {
  font-size: 12px;
  margin-left: 5px;
}


#logo {
  line-height: initial;
  float: none;
  width: 100%;
  text-align: center;
  margin: 25px auto 0;
}

#logo h1 {
  font-weight: {{ settings.logo-weight }};
  margin: 0;
  padding: 0;
  font-family: {{ settings.logo-font }};
  font-size: {{ settings.logo-size }};
  text-transform: {{ settings.logo-transform }};
}

#logo h2 {
  font-size: 14px;
  color: #000;
  margin-top: 15px;
}
#logo h2::after {
  content: '';
  display: block;
  background: url('header_logo_pattern.png');
  height: 12px;
  margin: 40px auto 0;
}

#logo h1 a {
  text-decoration: none;
  text-align: center;
}

nav {
  background: {{ settings.navigation }};
  /*font-family: {{ settings.navigation-font }};*/
  font-family: 'Playfair Display', serif;
  line-height: {{ settings.nav-height }};
  width: 100%;
  z-index: 5;
}

#navigation {
  padding: 0;
  position: relative;
}

ul#nav {
  list-style: none;
}

ul#nav li {
  display: inline-block;
  z-index: 21;
  float: left;

}

ul#nav li.dropdown {
  position: relative;
}


ul#nav li:hover {
  color: {{ settings.nav_hover_link_color }};
  // background: {{ settings.nav_hover_color }};
}

ul#nav li a {
  font-size: {{ settings.nav_size }};
  font-weight: {{ settings.nav_weight }};
  color: {{ settings.nav_color }};
  display: block;
  padding: 0 10px 0 10px;
  text-transform: {{ settings.navigation-transform }};
  letter-spacing: 1px;
  border: 1px solid transparent;
}
ul#nav li.dropdown:hover>a {
  border: 1px solid #ececec;
  border-bottom: 1px solid #fff;
  background: #fff;
  z-index: 10;
  position: relative;
}


ul#nav li a:hover {
  // background: {{ settings.nav_hover_color }};
  color: {{ settings.nav_hover_link_color }};
  text-decoration: none;
  // border: 1px solid #ececec;
  // background: #fff;
}

