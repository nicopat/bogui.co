.home, .share-icons {
  text-align: center;
}

.share-icons a {
  margin: 0 10px;
  color: {{ settings.icons }}! important;
  display: inline-block;
}

.share-icons a:hover {
  color: {{ settings.icons-hover }}! important;
}


.scrollup{
  width:40px;
  height:40px;
  opacity:0.3;
  position:fixed;
  bottom:50%;
  right:20px;
  display:none;
  z-index: 3;
}

.scrollup:hover { text-decoration: none; }


.Flexible-container {
  position: relative;
  padding-bottom: 56.25%;
  padding-top: 30px;
  overflow: hidden;
  height: 0;
  max-width: 1111px;
  margin: 0 auto;
}

.Flexible-container iframe,
.Flexible-container object,
.Flexible-container embed {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}



.section-title { margin-bottom: 20px; }

